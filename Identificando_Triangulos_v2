#include <stdio.h>
#include <stdlib.h>
#include <iostream>
#include <conio.h>


int TipoTriangulo(int a,int b,int c)
{

if(a==b && a==c)
printf("Triangulo equilátero");

else if(a==b && a!=c || b==c && b!=a || a==c && c!=b)
printf("Triangulo isóscele");

else if(a!=b;b!=c)
printf("Triangulo escaleno");

}

main ()

{

int a,b,c;


printf("Digite o primeiro lado\n");
scanf("%d",&a);

printf("Digite o segundo lado\n");
scanf("%d",&b);

printf("Digite o terceiro lado\n");
scanf("%d",&c);

while(a>b+c || b>a+c || c>b+a)
{
if(a>b+c || b>a+c || c>b+a)
printf("\nUm dos lados era maior que a soma dos outros dois! Digite novamente     \n");

printf("\nDigite o primeiro lado\n");
scanf("%d",&a);

printf("Digite o segundo lado\n");
scanf("%d",&b);

printf("Digite o terceiro lado\n");
scanf("%d",&c);
}

TipoTriangulo(a,b,c);

}
