/******************************************************************************

13.	Receba via teclado um número inteiro qualquer e exiba se ele é positivo ou negativo ou zero.

*******************************************************************************/

#include <stdio.h>

int main()
{
    int num;
    
    printf("Digite um numero inteiro: \n");
    scanf("%d", &num);
    
    if(num>0){
        printf("numero positivo\n");
        return 0;
    }
    
    if(num==0){
        printf("numero e zero\n");
        return 0;
    }
    
    if(num<0){
        printf("numero negativo\n");
        return 0;
    }

    
}
