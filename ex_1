/******************************************************************************

1.	Receba via teclado um número inteiro e exiba o seu sucessor e seu antecessor. 

*******************************************************************************/
#include <stdio.h>

int main()
{

    int num, pre, prox;
    
    printf("Digite um numero inteiro \n");
    scanf("%d", &num);
    
    prox = num + 1;
    pre = num - 1;
    
    printf("O numero antecessor é: %d \n",pre);
    printf("O numero sucessor é: %d \n",prox);

}
