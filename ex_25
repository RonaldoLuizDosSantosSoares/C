#include <stdio.h>

/* 

25.	Faça um programa que receba a altura e o peso de uma pessoa.
De acordo com a tabela a seguir e mostre qual a classificação dessa pessoa.

*/

int main() {
    
    float peso,altura;
    
    printf("Digite o peso: \n");
    scanf("%f", &peso);
    
    printf("Digite a altura: \n");
    scanf("%f", &altura);
    
    if(altura<1.20 & peso<=60){
        printf("Categoria A");
    }
    else if(altura<=1.20 & altura<1.70 & peso<=60){
        printf("Categoria B");
    }
    else if(altura>=1.70 & peso<=60){
        printf("Categoria C");
    }
    
    
    if(altura<=1.20 & peso>60 & peso<=90){
        printf("Categoria D");
    }
    else if(altura<=1.20 & altura<1.70 & peso>60 & peso<=90){
        printf("Categoria E");
    }
    else if(altura>=1.70 & peso>60 & peso<=90){
        printf("Categoria F");
    }
    
    
    if(altura<=1.20 & peso>90){
        printf("Categoria G");
    }
    else if(altura<=1.20 & altura<1.70 & peso>90){
        printf("Categoria H");
    }
    else if(altura>=1.70 & peso>90){
        printf("Categoria I");
    }
    
    return 0;
}
